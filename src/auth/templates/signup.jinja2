{% extends "base.jinja2" %}


{% block content %}
<div class="container">
    {% include 'messages.html' %}
    <div class="bodyLogin">
        <div class="main">
            <h1>Sign Up</h1>
            <form action="" method="POST">
                {{ form.csrf_token }}
                <div class="form-group">
                    {{ form.email(class="form-control", type="email", placeholder="Email") }}
                </div>
                <div class="form-group">
                    {{ form.password(class="form-control", type="password", placeholder="Password") }}
                </div>
                <div class="form-group">
                    {{ form.confirm(class="form-control", type="password", placeholder="Confirm your Password") }}
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 20px; margin-bottom: 20px;">
                    <div style="cursor: pointer;">
                        <label style="margin-bottom: 0px; display: inline-flex; -webkit-box-align: center; align-items: center; user-select: none; font-size: 12px; color: #263047; cursor: pointer; transition: color 0.2s ease 0s; width: 100%;">
                            {{ form.accept_terms(label=None, style="margin-right: 5px;") }} I accept Terms &amp;
                            conditions, Privacy policy
                        </label>
                    </div>
                    <a title="Terms &amp; conditions" target="_blank" href="/terms-condition"
                       style="display: inline-block; height: 20px; width: 18px; background-image: url(/static/img/information-outline.svg); background-size: 18px; margin-left: 5px; background-repeat: no-repeat;">
                    </a>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
                </div>

            </form>

            <div class="login-signup">
                <div>
                    <span>Already have an account?</span>
                    <a href="{{ url_for('auth_bp.login') }}">Log in.</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}