{% extends "base.jinja2" %}


{% block content %}
<div class="container">
    {% include 'messages.html' %}
    <div class="bodyLogin">
        <div class="main" style="">
            <h1>Reset your password</h1>
            <form action="" method="POST">
                {{ form.csrf_token }}
                <div class="form-group">
                    {{ form.password(class="form-control", type="password", placeholder="Password") }}
                </div>
                <div class="form-group">
                    {{ form.confirm(class="form-control", type="password", placeholder="Confirm your Password") }}
                </div>
                <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Save password</button>
                </div>
            </form>
            <div style="width: 3em;"></div>

        </div>
    </div>
</div>

{% endblock %}